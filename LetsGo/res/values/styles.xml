<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 
    Basic User EMAIL Input format 
    -->
	<style name="inputUserEmail" >
	    <item name="android:inputType">textEmailAddress</item>
        <item name="android:text">@string/userEmail</item>        
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_centerHorizontal">true</item>
	</style>
		<!-- User EMAIL hint -->
		<style name="inputUserEmail1" parent="inputUserEmail">
		    <item name="android:hint">@string/emailHint1</item>
		</style>
		<style name="inputUserEmail2" parent="inputUserEmail">
		    <item name="android:hint">@string/emailHint2</item>
		</style>
	
	<!-- END -->
	
    <!-- 
    Basic User PASSWORD Input format 
    -->		
	<style name="inputUserPassword">
        <item name="android:inputType">textPassword</item>
        <item name="android:text">@string/userPassword</item>   
	    <item name="android:layout_width">match_parent</item>	    
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textColorHint">@color/grey</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:ems">10</item>
	</style>
		<!-- User PASSWORD HINTS -->
		<style name="inputUserPassword1" parent="inputUserPassword">
			<item name="android:hint">@string/passwordHint1</item>
		</style>
		<style name="inputUserPassword2" parent="inputUserPassword">
		    <item name="android:hint">@string/passwordHint2</item>
		</style>
		
	<!-- 
	Basic User NAME Input format 
	-->
	<style name="name">
	    <item name="android:inputType">textPersonName</item>
	    <item name="android:layout_width">match_parent</item>	    
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:ems">10</item>
	    
	</style>
		<!-- Specific NAMES -->
		<style name="firstName" parent="name">
		    <item name="android:layout_alignParentTop">true</item>        	    
		    <item name="android:hint">@string/firstNameHint</item>
		</style>
		<style name="lastName" parent="name">
		   	<item name="android:hint">@string/lastNameHint</item>
    	</style>
    <!-- END -->
    
    <!-- 
    	BUTTON Linear Layout format: Two BUTTONS on single line
    -->
	<style name="buttonLL">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	</style>
		<!-- Specific BUTTONS -->
		<style name="buttonSubmit" parent="buttonLL">
		    <item name="android:text">@string/submitBut</item>  
		</style>
		<style name="buttonCancel" parent="buttonLL">
			    <item name="android:text">@string/cancelBut</item>
		</style>
		<style name="buttonSignUp" parent="buttonLL">
		    <item name="android:text">@string/signUpBut</item>		    
		</style>
		<style name="buttonLogIn" parent="buttonLL">
		    <item name="android:text">@string/logInBut</item>
		</style>
		<style name="buttonCreate" parent="buttonLL" >
		    <item name="android:text">@string/createBut</item>
		</style>
		<!-- SMALLER BUTTONS: My Activities Page -->
		<style name="buttonMyActPage" parent="buttonLL">
		    <item name="android:textSize">15sp</item>
		</style>
		<style name="buttonDeleteAct" parent="buttonMyActPage">
		    <item name="android:text">@string/deleteActivityBut</item>
		    
		</style>
		<style name="buttonEditAct" parent="buttonMyActPage">
		    <item name="android:text">@string/editActivityBut</item>
		</style>
		<style name="buttonMoreAct" parent="buttonMyActPage">
		    <item name="android:text">@string/moreActivityInfoBut</item>
		</style>
		<style name="buttonLeaveAct" parent="buttonMyActPage">
		    <item name="android:text">@string/leaveActivityBut</item>
		</style>
		<!-- END -->
		
	<!-- END -->
		
	<!-- BUTTON Stacked/"normal" layout: Single button per line -->
	<style name="buttonNorm">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_centerHorizontal">true</item>
	    <item name="android:layout_centerVertical">true</item>
	</style>
		<!-- Specific BUTTONS -->
		<style name="buttonLetsGoPlay" parent="buttonNorm">
		    <item name="android:text">@string/letsGoPlayBut</item>
		</style>
		<style name="buttonMyActivities" parent="buttonNorm">
		    <item name="android:text">@string/myActivitiesBut</item>
		    <item name="android:layout_below">@+id/letsGoPlayBut</item>		    
		</style>
		<style name="buttonLogOut" parent="buttonNorm">
		    <item name="android:text">@string/logOutBut</item>
		    <item name="android:layout_alignParentBottom">true</item>
		    <item name="android:background">@color/red_500</item>
		</style>
	<!-- END -->
	
	<!-- TEXT VIEW -->
		<!-- Create an Activity PAGE -->
		<style name="createViewBasic">
		    <item name="android:layout_width">120dp</item>
	   		<item name="android:layout_height">wrap_content</item>
	   		<item name="android:paddingBottom">12dp</item>
		</style>
		<!-- End -->
	<!-- END -->
	
	<!-- INPUT FIELDS -->
	<style name="inputCreateViewBasic">
	   	<item name="android:layout_width">fill_parent</item>
	   	<item name="android:layout_height">wrap_content</item>
	   	<item name="android:gravity">right</item>
	</style>
	<!-- END -->
</resources>
