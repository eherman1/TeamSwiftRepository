<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucsd.teamswift.letsgo.SignUpPage" >
    
    <EditText
        android:id="@+id/firstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signUpE1"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/signUpNameHint"
        android:inputType="textPersonName"
        android:text="@string/firstName" /> 
    <EditText
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpE1"
        android:layout_alignLeft="@+id/signUpName"
        android:layout_alignRight="@+id/signUpName"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/lastName" />
    
    <EditText
        android:id="@+id/signUpP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/signUpCancelBut"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/signUpPasswordHint2"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/signUpE2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpP1"
        android:layout_alignLeft="@+id/signUpP1"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/signUpEmailHint2"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/signUpP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpP2"
        android:layout_alignLeft="@+id/signUpP2"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="@string/signUpPasswordHint1"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/signUpE1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signUpE2"
        android:layout_alignLeft="@+id/signUpE2"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/signUpEmailHint1"
        android:inputType="textEmailAddress"
        android:text="@string/signUpEmail" />


    <Button
        android:id="@+id/signUpCancelBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpSubmitBut"
        android:layout_centerHorizontal="true"
        android:text="@string/cancelBut" />

    <Button
        android:id="@+id/signUpSubmitBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signUpP2"
        android:layout_below="@+id/signUpP2"
        android:layout_marginTop="15dp"
        android:text="@string/submitBut" />


   
</RelativeLayout>
