<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ucsd.teamswift.letsgo.MainActivity" >

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="@string/logInHint"
        android:inputType="textEmailAddress"
        android:text="@string/userEmail"/>

	<EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userEmail"
        android:layout_below="@+id/userEmail"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:hint="@string/passwordHint"
        android:inputType="textPassword"
        android:text="@string/userPassword" />
    
    <CheckedTextView
        android:id="@+id/checkedTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userPassword"
        android:layout_below="@+id/userPassword"
        android:layout_marginLeft="7dp"
        android:text="@string/forgotPassword"
        android:textSize="12sp"
        android:gravity="center"/>


    <Button
        android:id="@+id/logInBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/signUpBut"
        android:layout_below="@+id/checkedTextView1"
        android:layout_marginTop="20dp"
        android:text="@string/logInBut"
        android:textSize="20sp"
        android:gravity="center"/>
    
	<Button
        android:id="@+id/signUpBut"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userPassword"
        android:layout_below="@+id/checkedTextView1"
        android:layout_marginTop="68dp"
        android:text="@string/signUpBut"
        android:textSize="20sp"
        android:gravity="center"/>
    
</RelativeLayout>
